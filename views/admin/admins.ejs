<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <% include ../includes/header.ejs %>
    <title>Admins</title>
</head>
<script>
    
</script>
<body>
    <% include ../includes/adminbar.ejs %>
    <div class="d-flex justify-content-left" style="padding: 100px 20px 20px 20px;">
        <h1>Admins</h1>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <a class="btn btn-primary" href="/admin/admins/new"><i class="fa fa-cloud-upload mr-1" aria-hidden="true"></i>Novo Admin</a>
    </div>
    <div class="d-flex justify-content-center" style="padding: 10px 20px 100px 20px;">
        <!--Table-->
        <table class="table" id='adminsTable'>
            <!--Table head-->
            <thead class="blue-grey lighten-4">
                <tr>
                    <th>ID</th>
                    <th>USER</th>
                    <th>OPÇÕES</th>
                </tr>
            </thead>
            <!--Table head-->
            <!--Table body-->
            <tbody>
                <% for(var i = 0; i < admins.length; i++) { %>
                    <tr>
                        <td><%= admins[i]._id %></td>
                        <td><%= admins[i].username %></td>
                        <td><a href="/admin/admins/delete/<%= admins[i]._id %>">Deletar</a></td>
                    </tr>
                <% } %>
            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->
    </div>
    <% include ../includes/adminfooter.ejs %>
</body>
</html>